%h1
  November Games
  = @year
  at a Glance

- overall_stats = @stats_array.shift
%p.overall-stats
  = overall_stats[:warps]
  warps in
  = overall_stats[:games]
  games over
  = overall_stats[:nights]
  nights.
  %br/
  = overall_stats[:warps_per_game_str]
  warps per game -
  = overall_stats[:warps_per_night_str]
  warps per night - 
  = overall_stats[:games_per_night_str]
  games per night

%script
  $(document).ready(function(){ $('#maag').tablesorter(); });

%table.maag.tablesorter#maag
  - ['thead', 'tfoot'].each do |tag|
    = raw "<#{tag}>"
    %tr
      %th
      %th Player
      %th Warps
      %th Games
      %th Nights
      %th Wins
      %th Nights Won
      %th CFBs
      %th Come Ons
      %th Wimps
      %th Warps/ Game
      %th Warps/ Night
      %th Games/ Night
      %th Wins/ Game
      %th High Night
    = raw "</#{tag}>"
  %tbody
    - @stats_array.each_with_index do |st, idx|
      %tr
        %td.index
          = idx+1
        %td.player
          = st[:player]
        %td.warps{:class => st[:winner][:warps] && 'winner'}
          = st[:warps]
        %td.games{:class => st[:winner][:games] && 'winner'}
          = st[:games]
        %td.nights{:class => st[:winner][:nights] && 'winner'}
          = st[:nights]
        %td.wins{:class => st[:winner][:wins] && 'winner'}
          = st[:wins]
        %td.nights_won{:class => st[:winner][:nights_won] && 'winner'}
          = st[:nights_won]
        %td.cfbs{:class => st[:winner][:cfbs] && 'winner'}
          = st[:cfbs]
        %td.come_ons{:class => st[:winner][:come_ons] && 'winner'}
          = st[:come_ons]
        %td.wimps{:class => st[:winner][:wimps] && 'winner'}
          = st[:wimps]
        %td.warps_per_game{:class => st[:winner][:warps_per_game] && 'winner'}
          = st[:warps_per_game_str]
        %td.warps_per_night{:class => st[:winner][:warps_per_night] && 'winner'}
          = st[:warps_per_night_str]
        %td.games_per_night{:class => st[:winner][:games_per_night] && 'winner'}
          = st[:games_per_night_str]
        %td.wins_per_game{:class => st[:winner][:wins_per_game] && 'winner'}
          = st[:wins_per_game_str]
        %td.high_night{:class => st[:winner][:high_night] && 'winner'}
          = st[:high_night]



